<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/similar_IV1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/similar_IV2"
            app:layout_constraintBottom_toTopOf="@+id/similar_IV3" android:scaleType="center"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/similar_IV2"
            app:layout_constraintStart_toEndOf="@+id/similar_IV1" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/similar_IV4"
            android:scaleType="center" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/similar_IV3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/similar_IV1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/similar_IV4"
            app:layout_constraintBottom_toTopOf="@+id/similar_IV5" android:scaleType="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/similar_IV4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/similar_IV2" app:layout_constraintStart_toEndOf="@+id/similar_IV3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/similar_IV6"
            android:scaleType="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/similar_IV5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/similar_IV3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/similar_IV6" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/similar_IV6"
            app:layout_constraintTop_toBottomOf="@+id/similar_IV4" app:layout_constraintStart_toEndOf="@+id/similar_IV5"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="center"/>
    <TextView
            android:text="@string/similar_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
</android.support.constraint.ConstraintLayout>