<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_photo"
        tools:context=".AddPhoto" android:id="@+id/photoapp_addphoto_urlTV">

    <TextView
            android:text="@string/photoapp_addp_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photapp_addp_urlTV" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/photoapp_addp_urlET"/>
    <TextView
            android:text="@string/photoapp_addp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoapp_addp_titleTV" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="@string/photoapp_addp_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/photoapp_addp_headerTV" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="36sp" android:textAlignment="center"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="292dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="383dp"
            app:layout_constraintGuide_end="375dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/photoapp_addp_urlET" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:hint="@string/photoapp_addp_urlhint" android:singleLine="false"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/photoapp_add_nameET" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/photoapp_addp_titleTV" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="@string/photoapp_addp_entertitle"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>