<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_photo"
        tools:context=".AddPhoto" android:id="@+id/photoapp_addphoto_urlTV">

    <TextView
            android:text="@string/photoapp_addp_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photapp_addp_urlTV" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/photoapp_margin_elements"
            android:layout_marginBottom="@dimen/photoapp_margin_elements"
            app:layout_constraintBottom_toTopOf="@+id/photoapp_addp_urlET"/>
    <TextView
            android:text="@string/photoapp_addp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoapp_addp_titleTV" android:layout_marginTop="@dimen/photoapp_margin_elements"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/photoapp_margin_elements"
    />
    <TextView
            android:text="@string/photoapp_addp_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/photoapp_addp_headerTV" android:layout_marginTop="@dimen/photoapp_margin_elements"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/photoapp_margin_elements" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/photoapp_margin_elements"
            android:textSize="@dimen/photoapp_addp_headerTextSize" android:textAlignment="center"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="@dimen/photoapp_addp_guidelineMarginTop"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="@dimen/photoapp_addp_guidelineMarginBot"
            app:layout_constraintGuide_end="@dimen/photoapp_addp_constaintGuideEnd"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/photoapp_addp_urlET" android:layout_marginBottom="@dimen/photoapp_margin_elements"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/photoapp_margin_elements" android:hint="@string/photoapp_addp_urlhint" android:singleLine="false"
            android:layout_marginEnd="@dimen/photoapp_margin_elements" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/photoapp_addp_nameET" android:layout_marginTop="@dimen/photoapp_margin_elements"
            app:layout_constraintTop_toBottomOf="@+id/photoapp_addp_titleTV" android:layout_marginStart="@dimen/photoapp_margin_elements"
            app:layout_constraintStart_toStartOf="parent" android:hint="@string/photoapp_addp_entertitle"
            android:layout_marginEnd="@dimen/photoapp_margin_elements" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/photoapp_addp_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/photoapp_addp_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/photoapp_margin_elements"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/photoapp_margin_elements"
            android:layout_marginTop="@dimen/photoapp_margin_elements"
            app:layout_constraintTop_toBottomOf="@+id/photoapp_addp_nameET" android:layout_marginBottom="@dimen/photoapp_margin_elements"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"/>
</android.support.constraint.ConstraintLayout>